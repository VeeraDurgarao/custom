<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_cybersource_form" model="ir.ui.view">
        <field name="name">APS Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Credentials" name="payment_ids">
                    <group name="provider_credentials" options="{'invisible': [('code', '!=', 'Paypal')]}">
                        <field name="aps_merchant_ids"/>
                        <field name="aps_api_key_id"/>
                        <field name="aps_secret_key"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

     <record id="sale_payement_inherit_id" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="capture_payment_cybersource" type="object" string="Capture in Cybersource"
                           class="btn-primary"/>
                </xpath>
            </field>
        </record>


</odoo>

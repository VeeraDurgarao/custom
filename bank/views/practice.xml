<odoo>
    <data>
        <record id="view_practice_model_form" model="ir.ui.view">
            <field name="name">practice_model.form.views</field>
            <field name="model">practice.model</field>
            <field name="arch" type="xml">
                <form string="practice">
                    <header>
                        <button string="Send Mail" class="oe_highlight" type="object" name="sendmail" data-hotkey="q"/>
                        <button string="Confirm"  type="object" name="get_discount" data-hotkey="q"/>
                        <button string="Preview" type="object" name="preview" data-hotkey="q"/>
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="ref_no"/>
                        </h1>
                    </div>
                    <sheet>
                        <group>
                        <group>
                            <field name="customer"/>
                            <field name="customer_details"/>
                            <field name="partner_name"/>
                            <field name="quotation_template"/>
                             <field name="invisible" invisible="flag == True"/>
                    <field name="flag" invisible="1"/>
                    <field name="hide"/>
                        </group>
                            <group>
                            <field name="expiration"/>
                            <field name="Date"/>
                            <field name="payment_term_id"/>
                                 <field name="interest"/>
                                </group>
                        </group>
                        <notebook>
                            <page string="Order Lines">
                                <field name="quotation">
                                    <tree editable="bottom">

                                        <field name="name_of_loan"/>
                                        <field name="amount_practice"/>
                                        <field name="interest_rate_id"/>
                                        <field name="quantity"/>

                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

              <record id="view_practice_model_tree" model="ir.ui.view">
            <field name="name">practice_model.tree.views</field>
            <field name="model">practice.model</field>
            <field name="arch" type="xml">
                <tree string="practice1">
                    <field name="ref_no"/>
                    <field name="customer"/>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="temporary_form" name="New Form">
        <t t-call="website.layout">
            <div class="container">
                <h2 class="text-center">Home Page</h2>
                <div>
                    <img src="/bank/static/src/img/download.png" style="height:70%;" alt="Image"/>
                    <br/>
                    <hr/>
                </div>
                <h3>Login Credentials</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Durgarao</td>
                            <td>durgarao@gmail.com</td>
                            <td>durgarao</td>
                        </tr>
                        <tr>
                            <td>Naman</td>
                            <td>naman@gmail.com</td>
                            <td>naman</td>
                        </tr>
                        <tr>
                            <td>Anubhav</td>
                            <td>anubhav@gmail.com</td>
                            <td>anubhav</td>
                        </tr>
                        <tr>
                            <td>Swarup</td>
                            <td>swarup@gmail.com</td>
                            <td>swarup</td>
                        </tr>
                    </tbody>
                </table>
                <br/>
                <hr/>
                <h3>Login Form</h3>
                <form method="post" action="/odoo/form_submit" class="login-form">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" class="form-control"/>
                    </div>
                    <button type="submit" class="o_subtitle btn btn-primary">Submit</button>
                </form>
                <br/>
                <button class="o_button btn btn-primary">Durgarao</button>
            </div>
        </t>
    </template>
    <template id="template_form_submit" name="Customer Form Successfully Submitted">
        <t t-call="website.layout">
            <div class="alert alert-success">
                <h2>ThankYou</h2>
            </div>

        </t>
    </template>

</odoo>